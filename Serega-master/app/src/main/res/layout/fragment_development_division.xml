<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".development.DevelopmentDivisionFragment">


    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="20dp"
        android:textSize="30sp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:text="@string/development_division" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/development_recycler_view"
        android:layout_width="360dp"
        android:layout_height="492dp"
        android:layout_margin="30dp" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/add_developer_btn"
        app:layout_constraintBottom_toBottomOf="@+id/recyclerViewLogs"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_gravity="center_horizontal"
        app:srcCompat="@drawable/ic_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:contentDescription="+" />

</LinearLayout>